{
  "name": "powerpuff-pong",
  "version": "1.0.0",
  "description": "Powerpuff Girls themed Pong game",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npx tailwindcss -i ./src/input.css -o ./dist/output.css",
    "dev": "tsc --watch & npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "docker:build": "docker build -t powerpuff-pong .",
    "docker:run": "docker run -p 8080:80 powerpuff-pong",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "start": "npm run build && npm run docker:compose",
    "setup": "npm install && npm run build && npm run docker:compose",
    "first-time": "npm install && npm run build && npm run docker:compose && echo 'ðŸŽ® Game is ready! Open http://localhost:8080'"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "keywords": [
    "pong",
    "game",
    "powerpuff-girls",
    "typescript",
    "tailwind"
  ],
  "author": "",
  "license": "MIT"
}
